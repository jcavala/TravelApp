@page "/example"
@attribute [StreamRendering(true)]
<h3>Example</h3>

@if (isActive)
{
    <p> Hello from ...</p>
}

else
{
    <p> ... the server!</p>
}


@code {
    bool isActive = true;

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
        Task.Delay(2000); isActive = !isActive;
    }
}
